{
  "name": "@novarel/reflection",
  "description": "A lightweight and powerful reflection library for TypeScript.",
  "version": "0.0.1",
  "private": false,
  "license": "MIT",
  "tags": [
    "reflection",
    "typescript",
    "metadata",
    "decorator"
  ],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "@novarel/source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "dependencies": {
    "tslib": "^2.3.0"
  },
  "author": "Novarel <whomaderules@gmail.com>",
  "files": [
    "package.json",
    "README.md",
    "dist",
    "LICENCE"
  ],
  "nx": {
    "targets": {
      "build": {
        "outputs": [
          "{projectRoot}/dist"
        ],
        "inputs": [
          "production",
          "^production"
        ],
        "executor": "@nx/js:tsc",
        "options": {
          "outputPath": "packages/reflection/dist",
          "main": "packages/reflection/src/index.ts",
          "tsConfig": "packages/reflection/tsconfig.lib.json",
          "assets": [
            "packages/reflection/README.md",
            {
              "glob": "**/*",
              "input": "packages/reflection/",
              "output": "./"
            }
          ]
        }
      }
    }
  }
}